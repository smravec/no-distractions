{
  "name": "No Distractions",
  "description": "Block addictive recommendation feeds",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "hello.html",
    "default_icon": "default_icon.png"
  },

  "content_scripts": [
    {
      "matches": ["https://*.reddit.com/*"],
      "css": ["/css/reddit.css"],
      "js": ["/scripts/reddit.js"],
      "all_frames": true,
      "run_at": "document_start"
    },
    {
      "css": ["/css/youtube.css"],
      "all_frames": true,
      "matches": ["https://www.youtube.com/*", "https://m.youtube.com/*"],
      "run_at": "document_start"
    },
    {
      "matches": ["https://*.instagram.com/*"],
      "js": ["/scripts/instagram.js"],
      "run_at": "document_start"
    }
  ]
}
