{
  "manifest_version": 2,
  "name": "No Distractions",
  "description": "Blocks addictive recommendation feeds",
  "version": "1.0",
  "permissions": ["storage", "scripting"],

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "default_icon.png"
  },

  "content_scripts": [
    {
      "matches": ["https://*.reddit.com/*"],
      "css": ["css/reddit.css"],
      "js": ["scripts/reddit.js"],
      "all_frames": true,
      "run_at": "document_start"
    },
    {
      "matches": ["https://www.youtube.com/*", "https://m.youtube.com/*"],
      "css": ["css/youtube.css"],
      "all_frames": true,
      "run_at": "document_start"
    },
    {
      "matches": ["https://www.facebook.com/*", "https://m.facebook.com/*"],
      "css": ["css/facebook.css"],
      "all_frames": true,
      "run_at": "document_start"
    },
    {
      "matches": ["https://www.facebook.com/*", "https://m.facebook.com/*"],
      "js": ["scripts/facebook.js"],
      "all_frames": true,
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.instagram.com/*"],
      "css": ["css/instagram.css"],
      "all_frames": true,
      "run_at": "document_start"
    },
    {
      "matches": ["https://www.instagram.com/*"],
      "js": ["scripts/instagram.js"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ],
  "applications": {
    "gecko": {
      "id": "no-distractions@example.com",
      "strict_min_version": "68.0"
    }
  }
}
